# =============================================================================
# Localized Translator Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# This file contains all environment variables used by the backend application

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# API Configuration
API_HOST=localhost
API_PORT=8000
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
TRANSLATION_MONGO_CONNECTION_STRING=mongodb://localhost:27017
TRANSLATION_MONGO_DATABASE=LocalizationDB

# Qdrant Vector Database Configuration
TRANSLATION_QDRANT_HOST=localhost
TRANSLATION_QDRANT_PORT=6333
TRANSLATION_QDRANT_COLLECTION_NAME=translation_embeddings
TRANSLATION_QDRANT_API_KEY=

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# Google Gemini API Configuration
TRANSLATION_GEMINI_API_KEY=your_gemini_api_key_here
TRANSLATION_GEMINI_MODEL=gemini-2.5-pro
TRANSLATION_GEMINI_TEMPERATURE=0.1
TRANSLATION_GEMINI_MAX_TOKENS=4000

# Safety Configuration (CRITICAL: Keep enabled for user protection)
TRANSLATION_ENABLE_SAFETY_FILTERS=true
TRANSLATION_SAFETY_THRESHOLD=MEDIUM_AND_ABOVE

# Embedding Model Configuration
TRANSLATION_EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-large
TRANSLATION_EMBEDDING_DIMENSION=1024
TRANSLATION_MAX_EMBEDDING_BATCH_SIZE=32

# Sparse Vector Model Configuration
TRANSLATION_SPARSE_MODEL_NAME=prithvida/Splade_PP_en_v1

# Cross-encoder Model Configuration
TRANSLATION_CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-12-v2
TRANSLATION_CROSS_ENCODER_BATCH_SIZE=16

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Server Configuration
UVICORN_WORKERS=2

# GPU Usage (true/false)
TRANSLATION_USE_GPU=true

# FP16 Precision (true/false)
TRANSLATION_FP16=true

# Maximum Sequence Length
TRANSLATION_MAX_SEQUENCE_LENGTH=512

# Database Connection Pooling
TRANSLATION_MAX_CONNECTIONS=20
TRANSLATION_MIN_CONNECTIONS=5
TRANSLATION_CONNECTION_TIMEOUT=30
TRANSLATION_QUERY_TIMEOUT=60
TRANSLATION_MAX_RETRIES=3
TRANSLATION_RETRY_DELAY=1.0

# Batch Processing
TRANSLATION_BATCH_SIZE=100
TRANSLATION_PARALLEL_WORKERS=4

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# Vector Index Configuration
TRANSLATION_VECTOR_INDEX_TYPE=HNSW
TRANSLATION_VECTOR_DISTANCE_METRIC=cosine
TRANSLATION_HNSW_M=16
TRANSLATION_HNSW_EF_CONSTRUCT=200

# =============================================================================
# MODEL CACHE CONFIGURATION
# =============================================================================

# Model Cache Directories
TRANSLATION_EMBEDDING_MODEL_CACHE_DIR=./models/embeddings
TRANSLATION_CROSS_ENCODER_CACHE_DIR=./models/cross_encoder
TRANSLATION_TRANSLATION_MODEL_CACHE_DIR=./models/translation

# Local Models Flag (use local models instead of downloading)
TRANSLATION_USE_LOCAL_MODELS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
TRANSLATION_LOG_LEVEL=INFO

# Log File (optional, leave empty for console logging)
TRANSLATION_LOG_FILE=

# =============================================================================
# AUDIT AND MONITORING
# =============================================================================

# Audit Directory (for storing translation logs and audit trails)
AUDIT_DIR=./audit

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Python Path (for development)
PYTHONPATH=/app

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# ENVIRONMENT=production
# DEBUG=false
# TRANSLATION_MONGO_CONNECTION_STRING=mongodb://user:password@mongodb-host:27017/LocalizationDB
# TRANSLATION_QDRANT_HOST=qdrant-host
# TRANSLATION_QDRANT_API_KEY=your_qdrant_api_key
# UVICORN_WORKERS=4
# TRANSLATION_LOG_LEVEL=WARNING
